                            <li class="nav-item" id="category3">
                                <a class="nav-link" id="jewelery">Joyas</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a
                                    class="nav-link dropdown-toggle"
                                    href="#"
                                    role="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                >
                                    Otros links
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="/info"
                                            >Datos de variables</a
                                        >
                                    </li>
                                    <li>
                                        <a
                                            class="dropdown-item"
                                            href="/api/randoms"
                                            >Num. Randoms en objeto</a
                                        >
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/test"
                                            >5 Productos Random</a
                                        >
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <div class="d-flex ml-auto">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" href="/carrito"
                                        >Ir a Carrito</a
                                    >
                                </li>
                            </ul>
                            <button
                                class="btn btn-danger"
                                onclick="location.href='/logout'"
                            >
                                DESCONECTARSE
                            </button>
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <br />

        <div class="container mt-3">
                <div class="jumbotron">
                    <%- include('./formulario')-%>
                    
                </div>
            <div class="jumbotron p-3">
                <div id="productList"></div>
            </div>
        </div>
